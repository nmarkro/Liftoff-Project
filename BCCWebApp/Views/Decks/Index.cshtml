<h1 class="display-4">Your Decks</h1>


@if (ViewBag.Decks.Count == 0)
{
    <p>No decks yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th></th>
            <th>Name</th>
            <th>Navi Name</th>
            <th>Navi Code</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (Deck deck in ViewBag.Decks)
        {
            <tr>
                <td>@*selected deck checkbox here*@</td>
                <td>@deck.Name</td>
                <td>@deck.NaviName</td>
                <td>@deck.NaviCode</td>
                <td><a class="btn btn-sm btn-primary" href="#">Edit</a></td>
                <td><a class="btn btn-sm btn-danger" href="#">Delete</a></td>
            </tr>
        }
    </table>
}
<a class="btn btn-sm btn-primary" asp-controller="Decks" asp-action="Add">New Deck</a>